<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@android:color/darker_gray"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_pic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true" tools:srcCompat="@drawable/ocaocp"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier" app:barrierDirection="top"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ps"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_pic" android:textColor="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="@+id/iv_pic" app:layout_constraintEnd_toEndOf="@+id/iv_pic"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>